{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) comme {{ app.user.name }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
        </div>
    {% endif %}

    <div class="log-form">
      <h1 class="title-log">Identifiez-vous</h1>

      <div class="log-part">
        <div class="log-item">
          <label for="inputEmail">E-mail</label>
          <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Votre adresse e-mail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="log-item">
          <label for="inputPassword">Mot de passe</label>
          <input type="password" name="password" placeholder="Votre mot de passe" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token"
              value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn-log" type="submit">
            Se connecter
        </button>
      </div>
    </div>
</form>
{% endblock %}
